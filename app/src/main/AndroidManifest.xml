<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.virtualreport">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_foreground"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:windowSoftInputMode="adjustResize">
        <activity android:name=".HomeScreen" android:configChanges="orientation|screenSize|keyboard">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddItems.AddUrgence"
            android:parentActivityName=".HomeScreen" />
        <activity
            android:name=".AddItems.AddTransportMalade"
            android:parentActivityName=".HomeScreen" />
        <activity
            android:name=".AddItems.AddSoinAuCentre"
            android:parentActivityName=".HomeScreen" />
        <activity
            android:name=".AddItems.AddSoinADomicile"
            android:parentActivityName=".HomeScreen" />
        <activity
            android:name=".AddItems.AddPoste"
            android:parentActivityName=".HomeScreen" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>